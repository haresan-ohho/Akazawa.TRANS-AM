
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >

            <!-- スコアの画像 -->
            <TextView
                android:id="@+id/score"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/result"
                android:text="" />
            
            <!-- スコア表示するための2列 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal" >
                
                <!-- スコア表示:名称 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="vertical">
                    
                    <!-- Highest Jump Name -->
                    <TextView
                        android:id="@+id/highest_jump"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="@string/highest_jump_name"
                        android:paddingTop="1dp"
                        android:paddingBottom="1dp" >
                    </TextView>
                    
                    <!-- Longest Jump Name -->
                    <TextView
                        android:id="@+id/longest_jump"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="@string/longest_jump_name"
                        android:paddingTop="1dp"
                        android:paddingBottom="1dp" >
                    </TextView>
                    
                    <!-- Biggest Splash Name -->
                    <TextView
                        android:id="@+id/biggest_splash"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="@string/biggest_splash_name"
                        android:paddingTop="1dp"
                        android:paddingBottom="1dp" >
                    </TextView>
                    
                    <!-- Longest Tailslide Name -->
                    <TextView
                        android:id="@+id/longest_tailslide"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="@string/longest_tailslide_name"
                        android:paddingTop="1dp"
                        android:paddingBottom="1dp" >
                    </TextView>
                    
                    <!-- Highest Speed Name -->
                    <TextView
                        android:id="@+id/highest_speed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="@string/highest_speed_name"
                        android:paddingTop="1dp"
                        android:paddingBottom="1dp" >
                    </TextView>
                    
                    <!-- Longest Combo Nmae -->
                    <TextView
                        android:id="@+id/longest_combo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="@string/longest_combo_name"
                        android:paddingTop="1dp"
                        android:paddingBottom="1dp" >
                    </TextView>
                    <!-- FInal Score Name -->
                    <TextView
                        android:id="@+id/final_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="@string/final_score_name"
                        android:paddingTop="10dp"
                        android:paddingBottom="1dp" >
                    </TextView>
                    
                </LinearLayout>
                
                <!-- スコア表示:数値 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:orientation="vertical">
                    
                    <!-- Highest Jump Value -->
                    <TextView
                        android:id="@+id/highest_jump_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="0"
                        android:paddingTop="1dp"
                        android:paddingBottom="1dp" >
                    </TextView>
                    
                    <!-- Longest Jump Value -->
                    <TextView
                        android:id="@+id/longest_jump_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="0"
                        android:paddingTop="1dp"
                        android:paddingBottom="1dp" >
                    </TextView>
                    
                    <!-- Biggest Splash Value -->
                    <TextView
                        android:id="@+id/biggest_splash_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="0"
                        android:paddingTop="1dp"
                        android:paddingBottom="1dp" >
                    </TextView>
                    
                    <!-- Longest Tailslide Value -->
                    <TextView
                        android:id="@+id/longest_tailslide_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="0"
                        android:paddingTop="1dp"
                        android:paddingBottom="1dp" >
                    </TextView>
                    
                    <!-- Highest Speed Value -->
                    <TextView
                        android:id="@+id/highest_speed_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="0"
                        android:paddingTop="1dp"
                        android:paddingBottom="1dp" >
                    </TextView>
                    
                    <!-- Longest Combo Value -->
                    <TextView
                        android:id="@+id/longest_combo_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="0"
                        android:paddingTop="1dp"
                        android:paddingBottom="1dp" >
                    </TextView>
                    
                    <!-- FInal Score Name -->
                    <TextView
                        android:id="@+id/final_score_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="0"
                        android:paddingTop="10dp"
                        android:paddingBottom="1dp" >
                    </TextView>
                </LinearLayout>
                
                
            </LinearLayout>

            <!-- 下段固定レイアウト -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <!-- retrybutton -->
                <Button
                    android:id="@+id/retry_Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:text="@string/retry_button_name" >
                </Button>

                <!-- scorebutton -->
                <Button
                    android:id="@+id/score_Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_toLeftOf="@+id/gameover_Button"
                    android:layout_toRightOf="@+id/retry_Button"
                    android:text="@string/score_in_name" >
                </Button>

                <!-- gaymeover -->
                <Button
                    android:id="@+id/gameover_Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:text="@string/gameover_button_name" >
                </Button>

			</RelativeLayout>

        </LinearLayout>


    </LinearLayout>
